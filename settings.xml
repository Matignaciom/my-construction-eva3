<?xml version="1.0" encoding="UTF-8"?>
<!--
    Maven Settings para JFrog Artifactory
    Este archivo configura la conexión a JFrog Artifactory
    
    Ubicación: Copiar a ~/.m2/settings.xml o usar con -s settings.xml
-->
<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0 
          http://maven.apache.org/xsd/settings-1.0.0.xsd">
    
    <!-- Servidores - Credenciales de acceso -->
    <servers>
        <!-- Servidor Artifactory - Repositorio de releases -->
        <server>
            <id>central</id>
            <username>${env.ARTIFACTORY_USER}</username>
            <password>${env.ARTIFACTORY_PASSWORD}</password>
        </server>
        
        <!-- Servidor Artifactory - Repositorio de snapshots -->
        <server>
            <id>snapshots</id>
            <username>${env.ARTIFACTORY_USER}</username>
            <password>${env.ARTIFACTORY_PASSWORD}</password>
        </server>
    </servers>
    
    <!-- Perfiles de configuración -->
    <profiles>
        <profile>
            <id>artifactory</id>
            <repositories>
                <!-- Repositorio para dependencias -->
                <repository>
                    <id>central</id>
                    <name>libs-release</name>
                    <url>http://localhost:8082/artifactory/libs-release</url>
                    <snapshots>
                        <enabled>false</enabled>
                    </snapshots>
                </repository>
                
                <repository>
                    <id>snapshots</id>
                    <name>libs-snapshot</name>
                    <url>http://localhost:8082/artifactory/libs-snapshot</url>
                    <releases>
                        <enabled>false</enabled>
                    </releases>
                </repository>
            </repositories>
            
            <!-- Repositorio de plugins -->
            <pluginRepositories>
                <pluginRepository>
                    <id>central</id>
                    <name>plugins-release</name>
                    <url>http://localhost:8082/artifactory/plugins-release</url>
                    <snapshots>
                        <enabled>false</enabled>
                    </snapshots>
                </pluginRepository>
            </pluginRepositories>
        </profile>
    </profiles>
    
    <!-- Activar perfil por defecto -->
    <activeProfiles>
        <activeProfile>artifactory</activeProfile>
    </activeProfiles>
    
</settings>
